{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../game-shared/src/*"],
      "@server/*": ["../game-server/src/*"],
    }
  },
  "references": [
    {
      "path": "../game-shared"
    },
    {
      "path": "../game-server"
    },
  ],
  "include": ["**/*.ts", "**/*.tsx", "tests/**/*"],
  "exclude": ["node_modules"],
}
